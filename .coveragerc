[run]
source = src/
parallel = True
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*
    */venv/*
    */virtualenv/*
    */build/*
    */dist/*
    */.eggs/*
    */setup.py
    */conftest.py
    */migrations/*
    src/hipaa_compliance_summarizer/cli/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    class .*\bProtocol\):
    @overload

precision = 2
show_missing = True
skip_covered = False
sort = Cover
fail_under = 80

[html]
directory = htmlcov
title = HIPAA Compliance Summarizer Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
