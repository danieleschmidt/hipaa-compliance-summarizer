# HIPAA Compliance Summarizer - Environment Configuration Template
# Copy this file to .env and fill in your specific values for deployment

# =============================================================================
# REQUIRED SECURITY SETTINGS (MUST BE SET FOR PRODUCTION)
# =============================================================================

# Database Configuration
POSTGRES_PASSWORD=change_this_strong_password_123!
POSTGRES_USER=hipaa_user
POSTGRES_DB=hipaa_db

# Redis Configuration  
REDIS_PASSWORD=change_this_redis_password_456!

# Encryption and Security Keys (CRITICAL - MUST BE STRONG)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=change_this_to_a_very_strong_encryption_key_at_least_32_chars_long
JWT_SECRET_KEY=change_this_to_a_strong_jwt_secret_key_for_auth_tokens

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment Settings
NODE_ENV=production
FLASK_ENV=production
LOG_LEVEL=INFO

# Application Settings
WORKERS=4
MAX_WORKERS=8
MEMORY_LIMIT=2048m
CPU_LIMIT=2

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_grafana_password

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment Options
DEPLOYMENT_ENV=production
BACKUP_BEFORE_DEPLOY=true
SKIP_HEALTH_CHECK=false

# =============================================================================
# HIPAA COMPLIANCE CONFIGURATION
# =============================================================================

# Data Retention (in days)
DATA_RETENTION_DAYS=2555  # 7 years as required by HIPAA
AUDIT_RETENTION_DAYS=2555
BACKUP_RETENTION_DAYS=2555

# PHI Detection Thresholds
PHI_DETECTION_THRESHOLD=0.95
COMPLIANCE_LEVEL=strict

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# File Processing Limits
MAX_FILE_SIZE_MB=100
MAX_BATCH_SIZE=1000
PROCESSING_TIMEOUT=300

# =============================================================================
# SECURITY REMINDERS
# =============================================================================
# 
# 1. Generate strong passwords and keys (min 32 chars for encryption)
# 2. Never commit .env files to version control
# 3. Use different passwords for each service
# 4. Rotate keys regularly (every 90 days recommended)
# 5. Set proper file permissions (600) on .env file
# =============================================================================